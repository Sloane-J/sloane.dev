---
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";
import LenisScroll from "@/components/LenisScroll.astro";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "A modern portfolio website built with Astro and React",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description}/>
    <meta
      name="keywords"
      content="web developer,freelance creative developer,freelance web designer,samuel dorkey,Ghana web designer,Samuel Dorkey, Sloane Jnr"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href="https://sloanedev.vercel.app/" />
    <meta
      property="og:title"
      content="Samuel Dorkey â€” Freelance Web Designer and Developer"
    />
    <meta name="author" content="Samuel Dorkey" />
    <meta
      property="og:description"
      content="Helping creative brands and studios gain an unfair advantage with story-driven and results focused websites. Based in Koforidua, Ghana. Working Globally."
    />
    <meta property="og:url" content="https://sloanedev.vercel.app/" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:site_name" content="Samuel Dorkey" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts: Playfair Display + Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;600;700&family=Mrs+Saint+Delafield&display=swap"
  rel="stylesheet"
/>


    <!-- google console meta tag -->
    <meta
      name="google-site-verification"
      content="JjtegxanX-Bw1RtFAPdjtqwLp2SLjKUZh-Ggy6xobaY"
    />

    <!-- bing webmaster verification tag -->
     <meta name="msvalidate.01" content="4FE1EAEB5BE27F64EFB39BA29816E7A9" />

     <!-- rabbyt tag -->
      <script
    src="https://app.rybbit.io/api/script.js"
    data-site-id="3984fbd3c3ec"
    defer
></script>

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-[#080807] text-white min-h-screen font-playfair">
    <slot />
    <LenisScroll />
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </body>
</html>
